<div class="result-box">
  <div align="center">
    <h1>Pokemon Name: <%= @pokemon["name"].capitalize %></h1>
  </div>
</div>
<div align="center">
  <p align="center"><%= @pokemon["id"]%></p>
  <%= image_tag "#{@pokemon["sprites"]["front_default"]}", align: "center"%>
</div>
<div align="center" class="poke-search">
  <%= form_tag '/pokemons', method: :get do %>
    <p>Search another pokemon</p>
    <%= text_field_tag :pokemon%>
    <%= submit_tag "Search" %>
  <% end %>
</div>
